<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<HBox styleClass="Background" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Client.Controllers.ServeripFensterController">
   <children>
      <VBox alignment="CENTER" styleClass="LoginInnerVBox" HBox.hgrow="ALWAYS">
         <children>
            <Label text="Server IP und Port ändern" textFill="WHITE" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="22.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
            <Pane prefHeight="50.0" prefWidth="200.0" styleClass="Background" />
            <HBox VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                  <Label prefHeight="25.0" prefWidth="200.0" text="Server IP:" textFill="WHITE">
                     <font>
                        <Font size="20.0" />
                     </font>
                 </Label>
                  <TextField fx:id="serverTXT" prefHeight="25.0" prefWidth="250.0" promptText="IP" styleClass="UnderLinedText">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <children>
                 <Label prefHeight="25.0" prefWidth="200.0" text="Server Port:" textFill="WHITE">
                     <font>
                        <Font size="20.0" />
                     </font>
                 </Label>
                  <TextField fx:id="portTXT" prefHeight="25.0" prefWidth="250.0" promptText="Port" styleClass="UnderLinedText">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <Label prefHeight="25.0" prefWidth="213.0" text="Bitte beides eintragen" textFill="WHITE" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="22.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
       <Button mnemonicParsing="false" onAction="#serv" prefHeight="40.0" prefWidth="76.0" styleClass="UniversalButton" text="Ändern" VBox.vgrow="ALWAYS">
         <font>
            <Font size="14.0" />
         </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
      </Button>
            <Button mnemonicParsing="false" onAction="#switchToLogin" prefHeight="40.0" prefWidth="76.0" styleClass="UniversalButton" text="Zurück" VBox.vgrow="ALWAYS">
               <font>
                  <Font size="14.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
         <HBox.margin>
            <Insets bottom="100.0" left="250.0" right="250.0" top="100.0" />
         </HBox.margin>
      </VBox>
   </children>
</HBox>
